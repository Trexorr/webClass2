<html>
    <head>
        <%- include('partials/header1.ejs') %>
    </head>
    <body class="listmps-page dark-theme">
        <div class="dark-navbar-container">
            <%- include('partials/navbar2.ejs') %>
            <div class="dark-title-section">
                <h1 class="dark-hero-title">ADMIN</h1>
                <h2 class="dark-hero-subtitle">MENU</h2>
            </div>
        </div>
        <div class="container hero">
            <div class="listmps-content-wrapper">
                <div class="dark-content-container listmps-table-container">
                    <table class="listmps-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (usersData.length !=0) {var i=1; usersData.forEach( function(data) { %>
                            <tr class="listmps-row">
                                <td><%=data.id %></td>
                                <td class="name-cell"><%=data.name %></td>
                                <td>
                                    <form action="/admin/delete" method="POST">
                                        <input type="hidden" name="id" value="<%= data.id %>">
                                        <button type="null" class="delete-btn">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% i++; }) %> <%}%>
                        </tbody>
                    </table>
                </div>
                <div class="dark-content-container listmps-note-section">
                    <p><strong>Note:</strong> Only deleting the Users is possible from this screen.</p>
                </div>
            </div>
        </div>
    </body>
</html>
